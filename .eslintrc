{
  "extends": ["airbnb", "plugin:react/recommended"],
  "plugins": [
    "react"
  ],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
       "jsx": true
    }
  },
  "env": {
    "node": true,
    "es6": true,
    "mocha": true
  },
  "globals": {
    "document": true,
    "M": true,
    "window": true,
    "localStorage": true
  },
  "rules": {
    "max-len": [1, 80, 2,
      {
        "ignoreUrls": true,
        "ignoreStrings": true
      }
    ],
    "indent": ["error", 2],
    "max-depth": ["error", 5],
    "jsx-a11y/label-has-for": 0,
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }]
  }
}